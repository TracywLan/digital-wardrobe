<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Wardrobe</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  
  <div class="wardrobe-page">
    <div class="wardrobe-header">
      <h1>Your Wardrobe</h1>
      <div class="wardrobe-decorative-line"></div>
    </div>
    
    <div class="wardrobe-controls">
      <a href="/wardrobe/new" class="wardrobe-add-btn">Add New Item âœ¦</a>
      
      <div class="wardrobe-filter-section">
        <label for="category-filter">Filter by Category:</label>
        <form method="GET" action="/wardrobe">
          <select name="category" id="category-filter" onchange="this.form.submit()">
            <option value="all" <%= selectedCategory === 'all' ? 'selected' : '' %>>All Items</option>
            <% categories.forEach(category => { %>
              <option value="<%= category %>" <%= selectedCategory === category ? 'selected' : '' %>>
                <%= category %>
              </option>
            <% }) %>
          </select>
        </form>
      </div>
    </div>

    <div class="wardrobe-content">
      <% if (wardrobe.length === 0) { %>
        <div class="wardrobe-empty-state">
          <p>
            <% if (selectedCategory !== 'all') { %>
              No items found in this category. <a href="/wardrobe">View all items</a>
            <% } else { %>
              Your wardrobe is empty. Start adding items!
            <% } %>
          </p>
        </div>
      <% } else { %>
        <% 
          let currentCategory = '';
          wardrobe.forEach((item, index) => {
            const isNewCategory = item.category !== currentCategory;
            if (isNewCategory) {
              if (index > 0) { %>
                </div>
              <% } %>
              <div class="wardrobe-category-section">
                <h2 class="wardrobe-category-title"><%= item.category %></h2>
                <div class="wardrobe-items-grid">
            <% 
              currentCategory = item.category;
            } 
            %>
            <div class="wardrobe-item-card">
              <a href="/wardrobe/<%= item._id %>" class="wardrobe-item-link">
                <div class="wardrobe-item-image-wrapper">
                  <img 
                    src="<%= item.imageUrl || '/images/placeholder.png' %>" 
                    alt="<%= item.name %>"
                    class="wardrobe-item-image"
                    onerror="this.src='/images/placeholder.png'"
                  >

                </div>
                <div class="wardrobe-item-info">
                  <p class="wardrobe-item-name"><%= item.name %></p>
                </div>
              </a>
            </div>
          <% 
          }); 
          if (wardrobe.length > 0) { %>
                </div>
              </div>
          <% } %>
      <% } %>
    </div>
  </div>
</body>
</html>